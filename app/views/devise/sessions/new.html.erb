<div class="col-md-offset-4 col-md-4 login-section mTop-15">
  <div class="login col-md-12 clearfix">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{:class=>"form-horizontal"}) do |f| %>
      <div class="row">
        <div class="col-md-12">
          <h3>Login</h3>
        </div>
        <div class="form-group col-md-12 col-xs-12">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true,:class=>"form-control input-md" %>
        </div>
        <div class="form-group col-md-12 col-xs-12">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" ,:class=>"form-control input-md"%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group col-md-12 col-xs-12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me,:class=>"control-label" %>
          </div>
        <% end -%>
      </div>
      <div class="">
        <%= f.submit "Log in",:class=>"btn btn-success" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
