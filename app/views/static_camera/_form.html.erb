<%= form_for @camera, :html => { :class => "form-horizontal camera" ,:multipart => true},:url =>"create_camera",:multipart => "true" do |f| %>

  <% if @camera.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@camera.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @camera.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

 
      <%= f.hidden_field :latitude, :class => 'form-control' %>
    
 
      <%= f.hidden_field :longitude, :class => 'form-control' %>
   
  <div class="form-group">
    <%= f.label :location_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :location_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :place_id, :class => 'hidden' %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>

    </div>
  </div>

<% end %>
