<%= form_for @event, :html => { :class => "form-horizontal event" ,:multipart => true},:url =>"save_video",:multipart => "true" do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :latitude, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :longitude, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_occurence, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date_of_occurence, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :location_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :location_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tags, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=text_field("event","category_list") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :place_id, :class => 'hidden' %>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-2">Select your video</label>
    <input type="file" class="form-control" name="event[video]"/>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),events_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
